mixin browser
  .browsers
    .browser
      .browser-top-bar
        .browser-circle    
        .browser-circle     
        .browser-circle  
      .browser-content


mixin project(iden, title, imageside)
  .row(id=iden)
    if imageside == 'left'
      .col-md-8
        div
          +browser
      .col-md-4
        div.description
          h2= title
          block
    else
      .col-md-8.col-md-push-4
        div(id=iden)
          +browser
      .col-md-4.col-md-pull-8
        div.description
          h2= title
          block


mixin technology(...techs)
  ul.tech-list
    each tech in techs
      li(id=tech)
        span.icon-star
        =tech
        
  
mixin education(id, title, institution, time)
  div(id=id)
    div.title
      span= title
    div.institution= institution + ' '
      span.time= time
    if block
      block
  
mixin work(id, position, location, time)
  div(id=id)
    div.position
      span= position
    div.location= location + ' '
      span.time= time
    if block
      block

mixin skill(num, title)
  li.skill(class="skill-#{num}")
        h2= title
        block


